<table class="table table-sm">
          <thead>
              <tr>
                  <th>Created</th>
                  <th>Name</th>
                  <th>Comment</th>
                  <th>Rating</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
              @foreach(var r in Model.Reviews)
              {
                  <tr>
                      <td>@r.CreatedOn</td>
                      <td>@r.Name</td>
                      <td>@r.Comment</td>
                      <td>@r.Rating</td>
                  </tr>
              }
          </tbody>
      </table>
      