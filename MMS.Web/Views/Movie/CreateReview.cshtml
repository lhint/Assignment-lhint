@model ReviewViewModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Movie" asp-action="Index">Movies</a></li>
        <li class="breadcrumb-item"><a asp-controller="Movie" asp-action="Details" asp-route-id="@Model.MovieId">Details</a></li>
        <li class="breadcrumb-item active" aria-current="page">Add Review</li>
    </ol>
</nav>

<h3 class="mt-4 mb-4">Movie</h3>
<h5 class="mb-4">Add review @Model.Title</h5>
<div class="card rounded shadow p-3">
    <form asp-action="CreateReview">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- add hidden field to store MovieId -->
            <input type="hidden" asp-for="MovieId"/>

            <!-- add form group for comment textarea -->
            <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
            <label asp-for="Comment" class="control-label mt-2"></label>     
            <textarea rows="5" asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control"/>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <!-- add form group for Create and Cancel buttons -->
            <div class="form-group">
              <input type="submit" value ="Create" class="btn btn-primary"/>
              <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.MovieId">Cancel</a>
            </div>

            
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

